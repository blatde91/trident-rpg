<div class='container'>

  <div class='jumbotron' id='header-section'>
    <h1>Dashboard</h1>
  </div>
  
  <div id='dashboard-content-section'>
    <div class="row">
      <div class="col-md-12">
        <h2>Welcome back, {{username}}.</h2>
      </div>
    </div>

    <div class='openGamesContainer'> 
      <div class='row'>
        <div class='col-md-12'>
          <div class='panel panel-default'>
            <div class='panel-heading'>Open Games</div>
            <div class='panel-body'>
              Your open games
            </div>
            <table class='table openGamesTable'>
              <tr>
                <th>Game ID</th>
                <th>Username</th>
                <th>Play</th>
              </tr>
              {{#each games}}
                <tr class='trGameList'>
                  <td>{{id}}</td>
                  <td>{{first_player}}</td>
                  <td><button class='continueGame btn btn-md button-action' data-id={{id}}>Continue Game</button></td>
                </tr>
              {{/each}}
            </table>
            <br>
          </div>
        </div>
      </div>
    </div>

    <div class='row'>
      <div class='col-md-12'>
        <h2>Not playing a game yet?</h2>
        <a href='/game' class='createNewGame btn btn-md button-action' data-id={{userId}} data-username='{{username}}'>Create A New Game</a>
      </div>
    </div>
  </div>

</div>